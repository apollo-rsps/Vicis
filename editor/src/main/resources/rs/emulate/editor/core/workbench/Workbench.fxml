<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.StatusBar?>
<?import rs.emulate.editor.core.workbench.viewer.WorkbenchResourceViewer?>
<?import rs.emulate.editor.javafx.controls.Dock?>
<?import rs.emulate.editor.javafx.controls.ResizableBorderPane?>
<BorderPane fx:controller="rs.emulate.editor.core.workbench.Workbench" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="/styles.css" styleClass="workbench">
    <top>
        <MenuBar fx:id="menuBar"/>
    </top>
    <center>
        <ResizableBorderPane fx:id="dockPane" styleClass="dock-pane">
            <center>
                <WorkbenchResourceViewer fx:id="viewer" />
            </center>
            <left>
                <Dock fx:id="leftDock" side="LEFT"/>
            </left>
            <right>
                <Dock fx:id="rightDock" side="RIGHT" />
            </right>
            <bottom>
                <Dock fx:id="bottomDock" side="BOTTOM"  />
            </bottom>
        </ResizableBorderPane>
    </center>
    <bottom>
        <StatusBar fx:id="statusBar"/>
    </bottom>
</BorderPane>

